<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="12-04-2021"
                android:textColor="@color/purple_700"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_date"
                android:text="19:48:44"
                android:textColor="@color/purple_700"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Order Pin Retail POS"
                android:textColor="@color/purple_700"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_wifi" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_500"
        app:layout_constraintHeight_percent=".97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_header"
        app:layout_constraintWidth_percent=".2">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".97"
        app:layout_constraintTop_toBottomOf="@+id/cl_header"
        app:layout_constraintWidth_percent=".8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_section_one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            app:layout_constraintHeight_percent=".55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".6">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_add_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/but_bg_one"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_one"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_constraintStart_toEndOf="@id/iv_add_profile"
                app:layout_constraintTop_toTopOf="@id/iv_add_profile" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_siger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_one"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_constraintStart_toEndOf="@id/iv_profile"
                app:layout_constraintTop_toTopOf="@id/iv_profile" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_one"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_constraintStart_toEndOf="@id/iv_siger"
                app:layout_constraintTop_toTopOf="@id/iv_siger" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_delet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_one"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_constraintStart_toEndOf="@id/iv_cart"
                app:layout_constraintTop_toTopOf="@id/iv_cart" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_one"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_constraintStart_toEndOf="@id/iv_delet"
                app:layout_constraintTop_toTopOf="@id/iv_delet" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_itemshow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:background="#E87676"
                app:layout_constraintHeight_percent=".8"
                app:layout_constraintStart_toStartOf="@id/iv_add_profile"
                app:layout_constraintTop_toBottomOf="@+id/iv_add_profile"
                app:layout_constraintWidth_percent=".87">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_two"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:layout_constraintStart_toEndOf="@id/cl_itemshow"
                app:layout_constraintTop_toTopOf="@id/cl_itemshow" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_two"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:layout_constraintTop_toBottomOf="@id/iv_up"
                app:layout_constraintStart_toEndOf="@id/cl_itemshow"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_two"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:layout_constraintTop_toBottomOf="@id/iv_down"
                app:layout_constraintStart_toEndOf="@id/cl_itemshow"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_two"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:layout_constraintTop_toBottomOf="@id/iv_reduce"
                app:layout_constraintStart_toEndOf="@id/cl_itemshow"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_two"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:layout_constraintTop_toBottomOf="@id/iv_search"
                app:layout_constraintStart_toEndOf="@id/cl_itemshow"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_lebel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/but_bg_two"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:layout_constraintTop_toBottomOf="@id/iv_edit"
                app:layout_constraintStart_toEndOf="@id/cl_itemshow"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_section_two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#8C804949"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".55"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".4">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_area_three"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#D52196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cons_section_one">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#6893A7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".364"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cons_area_three">

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>